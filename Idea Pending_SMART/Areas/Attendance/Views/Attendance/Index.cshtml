@model IEnumerable<Idea_Pending_SMART.Models.Attendance>
@{
    ViewData["Title"] = "Attendance";
}

<div class="container p-3">
    <a asp-controller="Attendance" asp-action="Upsert" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> &nbsp;Create New Attendance
    </a>

</div>


<table class="table">
    <thead>
        <tr>
            <th>
            Date
            </th>
            <th>
               Meal Provided
            </th>
            <th>
              Meal Eaten
            </th>
        
        </tr>
    </thead>
    <tbody>
        @foreach (var DBItem in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelDBItem => DBItem.Date)
                    </td>
                    <td>
                    @Html.DisplayFor(modelDBItem => DBItem.MealProvided)
                    </td>
                    <td>
                    @Html.DisplayFor(modelDBItem => DBItem.MealEaten)
                    </td>
                
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <!-- asp-route-id is parameter, named id, that is passed to the action method, Upsert, with the value of DBItem.AssignmentName -->
                            <a asp-controller="Attendance" asp-action="Upsert" asp-route-id="@DBItem.AttendanceID"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Attendance" asp-action="Delete" asp-route-id="@DBItem.AttendanceID"
                       class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
        }
    </tbody>
</table>