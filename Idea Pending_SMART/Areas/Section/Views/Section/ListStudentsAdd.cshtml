@model Idea_Pending_SMART.Areas.Section.ViewModels.ListStudentsAdd
@{
    ViewBag.Title = "Classtime";
    var time = ViewBag.classtimes;
    var classID = ViewBag.classID;
    var holder = 0;

}

<h3> classs time passed: @time</h3>
@foreach (var obj in Model.Enrollment)
{
    //gets students not in the class ID passed 
    if(obj.Student.timeAvailable == true )
    {

        <div class="col-md-10">
            <span class="badge bg-gradient text-white  .rounded-lg mb-xxl-2" input-type="radio"
                style="background-color:darkslategray; border-color:antiquewhite; border-width: 10px; border-style:double;">
                    <ul>
                        <tr>
                            <th width="80%">
                            <td>
                             <div class="col-md-10">
                              <h3>Student ID: @obj.StudentID</h3>
                             <h3>Student Name: @obj.Student.ApplicationNameFirst @obj.Student.ApplicationNameLast</h3>
                          <div class="w-75 btn-group" role="group">
                         <a asp-controller="Section" asp-action="Add" asp-route-id="@obj.StudentID" asp-route-id="@obj.ClassID"
                                class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Add</a>
                                <a asp-controller="Student" asp-action="Info" asp-route-id="@obj.StudentID" 
                       class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Details</a>
                            </div>
                            </div>
                            </td>

                        </tr>
                        <td>
                        </td>
                    </ul>    
                </span>
                </div>
    }
}



