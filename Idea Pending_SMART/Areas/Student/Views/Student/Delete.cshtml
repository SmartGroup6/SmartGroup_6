@model Student

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Student</h2>
            <hr>
        </div>
        <!--Needed because all other items are disabled-->
        <input asp-for="StudentID" hidden />
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="ApplicationNameFirst"></label>
            <input asp-for="ApplicationNameFirst" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ApplicationNameLast"></label>
            <input asp-for="ApplicationNameLast" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
