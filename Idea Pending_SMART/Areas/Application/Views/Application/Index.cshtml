@{
    ViewData["Title"] = "Applications";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Application" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Application
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <!--<th>Status</th>-->
                <th>Score</th>
                <th>Submission Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.ApplicationNameFirst
                    </td>
                    <td>
                        @obj.ApplicationNameLast
                    </td>
                    <td>
                        @obj.TotalScore
                    </td>
                    <td width="50%">@obj.SubmissionDate</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Application" asp-action="Edit" asp-route-id="@obj.ApplicationID"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Application" asp-action="Delete" asp-route-id="@obj.ApplicationID"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
