@model Application

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Application</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="ApplicationNameFirst"></label>
            <input asp-for="ApplicationNameFirst" class="form-control" />
            <span asp-validation-for="ApplicationNameFirst" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ApplicationNameLast"></label>
            <input asp-for="ApplicationNameLast" class="form-control" />
            <span asp-validation-for="ApplicationNameLast" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Application" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
