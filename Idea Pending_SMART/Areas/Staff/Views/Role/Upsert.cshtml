@model Microsoft.AspNetCore.Identity.IdentityRole
@{
}
<!-- anytime a form takes file uploads, you need the enctype to avoid security issues -->
<form method="post" asp-controller="Role" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            @* All for Model validation and HTML validation *@
            
            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">@(!(Model.Name == null) ? "Update" : "Create") Role</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">

                    <div class="col-3">
                        <label asp-for="Name"></label>
                    </div>

                    <div class="col-9">
                        <input id="Name" class="form-control" asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    @if (!(Model.Id.Equals("0")))
                    {
                        <input type="hidden" asp-for="Id" />
                    }
                    </div>

                <input type="hidden" asp-for="@Model.NormalizedName">
                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                @if (!(Model.Name == null) )
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <!-- we will need to write some javascript to validate the input at some point. -->
                                    <button type="submit" class="btn btn-primary form-control" >Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-controller="Staff" asp-action="Roles" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>


    </div>
</form>

