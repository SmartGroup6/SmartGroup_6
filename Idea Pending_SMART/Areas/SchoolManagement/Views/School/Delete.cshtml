@model Idea_Pending_SMART.Models.School

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Menu Item - ARE YOU SURE?</h2>
            <hr />
        </div>
        <!--Needed because all other items are disabled-->
        <input asp-for="SchoolID" hidden />
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="SchoolName"></label>
            <input asp-for="SchoolName" disabled class="form-control" />

        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="SchoolManagement" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

