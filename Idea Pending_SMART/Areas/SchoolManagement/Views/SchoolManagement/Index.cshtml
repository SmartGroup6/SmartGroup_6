@model Idea_Pending_SMART.Areas.Semester.ViewModels.ManageVM
@*@model IEnumerable<ManageVM>*@

@{
    ViewData["Title"] = "Semester";
}


<!-- School START -->
<div class="container p-3">
    <a asp-controller="School" asp-action="Upsert" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> &nbsp;Create New School
    </a>
    <h4>Schools</h4>
    <p>Setup upsert stuff for each model type</p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.School.First().SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School.First().Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School.First().Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.School)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SchoolName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <!-- asp-route-id is parameter, named id, that is passed to the action method, Upsert, with the value of item.SemesterName -->
                        <a asp-controller="Semester" asp-action="Upsert" asp-route-id="@item.SchoolID"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Semester" asp-action="Delete" asp-route-id="@item.SchoolID"
                       class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- School END -->

