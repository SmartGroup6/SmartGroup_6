@model Idea_Pending_SMART.Models.Course
@{
}
<!-- anytime a form takes file uploads, you need the enctype to avoid security issues -->
<form method="post" asp-controller="Course" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            @* All for Model validation and HTML validation *@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">@(Model.CourseID != 0 ? "Update" : "Create") Course</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">

                    <div class="col-3">
                        <label asp-for="CourseName"></label>
                    </div>

                    <div class="col-9">
                        <input id="CourseName" class="form-control" asp-for="CourseName" />
                        <span class="text-danger" asp-validation-for="CourseName"></span>
                    </div>
                    @if (Model.CourseID != 0)
                    {
                        <input type="hidden" asp-for="CourseID" />
                    }
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CourseDescription"></label>
                    </div>
                    <div class="col-9">
                        <input id="MaxStudentCount" class="form-control" asp-for="CourseDescription" />
                        <span class="text-danger" asp-validation-for="CourseDescription"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                            <label asp-for="SchoolId"></label>
                    </div>
                    <div class="col-9">
                            <input id="SchoolId" class="form-control" asp-for="SchoolId" Text="1"/>
                            <span class="text-danger" asp-validation-for="SchoolId"></span>
                            <p>This should probably be a combobox</p>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                @if (Model.CourseID != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <!-- we will need to write some javascript to validate the input at some point. -->
                                    <button type="submit" class="btn btn-primary form-control" onclick="return ValidateInput()">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-controller="SchoolManagement" asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>


    </div>
</form>



@section Scripts
{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
            $("#datepicker2").datepicker();
        });
    </script>
}