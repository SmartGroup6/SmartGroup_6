@using Idea_Pending_SMART.Dev_Chantel.Models
@model IQueryable<Classroom>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SMART System</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">Chantels Pretend Class list area</></span>
    </div>
        @foreach (var p in Model ?? Enumerable.Empty<Classroom>()) {
    <div>
            <span class="badge rounded-pill bg-primary text-white"
              style="float:center">
                <small>@p.CourseID</small>
                <small>Time:@p.ClassTimeID</small>
                <small>@p.ClassDescription</small>
                <button type="submit"
                    class="btn btn-success btn-sm pull-right" style="float:right">
                    Go to Class
                </button>
            </span>

            
    </div>
        }
</body>
</html>

        