
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IdeaPending - SMART</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link href="site.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-warning">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Home" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" >


                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Home" asp-controller="Home" asp-action="Index">Home</a>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Areas</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="SchoolManagement" asp-controller="SchoolManagement" asp-action="Index">School Management</a>
                                <a class="dropdown-item" asp-area="Section" asp-controller="Section" asp-action="Index">Section</a>
                                <a class="dropdown-item" asp-area="Student" asp-controller="Student" asp-action="Index">Student</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Staff" asp-page="/Users/Index">Manage Users</a>
                                <a class="dropdown-item" asp-area="Staff" asp-page="/Roles/Index">Manage Roles</a>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-0">
        <div class="row flex-nowrap">
            <!--Travis attemping to make a sidebar-->
            <div class="col min-width-300-md">
                <div class="d-flex flex-column flex-shrink-0 p-3" style="width: 280px; background-color:darkslategray; 
                            border-color:antiquewhite; border-width: 10px; border-style:double">
                    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <svg class="bi me-2" width="40" height="65"><use xlink:href="#bootstrap"></use></svg>
                        <span class="fs-4 text-light" >Areas</span>
                    </a>
                    <hr style="height: 3px; color:floralwhite">
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Home" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Application" asp-controller="Application" asp-action="Index">Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Section" asp-controller="Section" asp-action="Index">Class Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Student" asp-controller="Student" asp-action="Index">Students</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link text-white" asp-area="SchoolManagement" asp-controller="SchoolManagement" asp-action="Index">School Management</a>


                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Attendance" asp-controller="Attendance" asp-action="Index">Attendance</a>
                    </ul>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Assignment" asp-controller="Assignment" asp-action="Index">Assignment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Meeting" asp-controller="Meeting" asp-action="Index">Meetings Center</a>
                    </ul>
                  <hr style="height: 3px; color:floralwhite">
                </div>
            </div>
            <div class="col-10">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
                </div>
            </div>
        </div>

    <style>
        body {
            background-color: floralwhite;
        }

        img {
            width: 380px;
            margin-bottom:100px;
        }
    </style>

    <div class="text-center">
        <img src="https://nopoorafrica.org/wp-content/uploads/2020/06/nopoorlogo-320.png" alt="alttext"></img>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - IdeaPending - SMART - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
